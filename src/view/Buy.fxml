<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane minHeight="400.0" minWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BuyController">
   <children>
      <Label layoutX="228.0" layoutY="50.0" text="BTC Available">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Slider fx:id="buySlider" layoutX="230.0" layoutY="145.0" />
      <Label fx:id="balanceLabel" alignment="CENTER" layoutX="279.0" layoutY="92.0" text="Label">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="selectedLabel" alignment="CENTER" layoutX="250.0" layoutY="173.0" minWidth="100.0" text="${buySlider.value}" />
      <Button fx:id="buyButton" layoutX="274.0" layoutY="240.0" mnemonicParsing="false" onAction="#buyCoin" text="Buy" />
      
 
   </children>
</AnchorPane>
